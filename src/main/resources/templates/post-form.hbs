{{#partial "content" }}

    {{#if editPost}}
        <h3 class="form-post-header">Edit</h3>
        <form action="/posts/{{editPost.id}}/update" method="post">
            <label for="content">Edit Post Content</label>
            <input type="text" name="content" id="content" value="{{editPost.content}}">
    {{else}}
        <h3 class="form-post-header">Add a new Post!</h3>
        <form action="/posts/new" method="post">
            <label for="content">Post Content</label>
            <input type="text" name="content" id="content">
    {{/if}}
        <button type="submit" class="btn waves-effect waves-light">Done!</button>
    </form>
{{/partial}}

{{> layout.hbs }}